<Page
    x:Class="OralHistoryBooth.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OralHistoryBooth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="changePasswordButton" Content="Change Password" Margin="50,50,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="changePasswordButton_Click"/>
        <Button x:Name="logOutButton" Content="Log Out" Margin="280,50,0,0" VerticalAlignment="Top" Width="200" Height="38" Click="logOutButton_Click"/>
        <TextBlock x:Name="timeLeft"  HorizontalAlignment="Left" Margin="40,105,0,0" TextWrapping="Wrap" FontSize="95" Text="{x:Bind AudioRecord.TimerString, Mode=OneWay}" VerticalAlignment="Top" Foreground="Black" Width="312"/>

    </Grid>
</Page>
